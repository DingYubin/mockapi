<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityTranslucent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="common_loading_dialog" parent="@android:style/Theme.Dialog">
        <!-- name是我们在使用时要用到的资源的标志，parent是指当前的样式所继承的父类样式 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景阴影 -->
    </style>

    <style name="HeadTitleTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarViewDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDayTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

</resources>
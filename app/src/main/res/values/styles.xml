<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <!-- 修复线上问题待A55验证Attempt to invoke virtual method 'android.graphics.drawable.Drawable
        android.graphics.drawable.Drawable$ConstantState.newDrawable(android.content.res.Resources)'
        on a null object reference -->
        <item name="android:editTextBackground">@android:color/transparent</item>
    </style>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/st_bg_common_normal</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/st_bg_trade_black</item>
        <item name="colorPrimaryDark">@color/st_bg_trade_black</item>
    </style>

    <style name="SplashScreenTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="MainScreenTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppFullScreenTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--图片渲染到状态栏的样式-->
    <style name="AppTheme.StatusBar.ImageTranslucent" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="setting_title_label_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/st_text_master_common_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="develop_setting_style" parent="@style/setting_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/view_bg_color_selector</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/st_text_master_common_white</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">20.5sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>

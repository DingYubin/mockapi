<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoScaleTextView">
        <attr name="min_text_size" format="dimension" />
        <attr name="precision" format="float" />
    </declare-styleable>
    <declare-styleable name="CustomTextView">
        <attr name="key_text" format="string" />
        <attr name="value_text" format="string" />
        <attr name="key_color" format="color" />
        <attr name="value_color" format="color" />
        <attr name="key_size" format="dimension" />
        <attr name="value_size" format="dimension" />
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gap" format="dimension" />
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="SwipyRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="pickerview">
        <attr name="pickerview_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="pickerview_textSize" format="dimension" />
        <attr name="pickerview_textColorOut" format="color" />
        <attr name="pickerview_textColorCenter" format="color" />
        <attr name="pickerview_dividerColor" format="color" />
        <attr name="pickerview_lineSpacingMultiplier" format="float" />
    </declare-styleable>

    <declare-styleable name="CurColor">
        <attr name="rose" format="color|reference" />
        <attr name="down" format="color|reference" />
        <attr name="changes">
            <enum name="RedGreen" value="0" />
            <enum name="GreenRed" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TabPagerIndicator">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>
    <declare-styleable name="IndexTextView">
        <attr name="index_name" format="string" />
        <attr name="index_value" format="string" />
        <attr name="index_change" format="string" />
        <attr name="index_change_rate" format="string" />
        <attr name="index_color" format="color" />
    </declare-styleable>
    <declare-styleable name="ItemATextView">
        <attr name="itemA_name" format="string" />
        <attr name="itemA_rate" format="string" />
        <attr name="itemA_name1" format="string" />
        <attr name="itemA_change" format="string" />
        <attr name="itemA_change_rate" format="string" />
        <attr name="index_color1" format="color" />
    </declare-styleable>


    <!-- my dialog color -->
    <declare-styleable name="PasswordInputView">
        <attr name="myBorderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderRadius" format="dimension" />
        <attr name="passwordLength" format="integer" />
        <attr name="passwordWidth" format="dimension" />
        <attr name="passwordColor" format="color" />
        <attr name="passwordRadius" format="dimension" />
        <attr name="border_style">
            <enum name="none" value="0" />
            <enum name="circular" value="1" />
            <enum name="square" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="bubble">
        <attr name="shadowColor" format="color" />
        <attr name="padding" format="dimension" />
        <attr name="strokeWidths" format="float" />
        <attr name="cornerRadius1" format="float" />
        <attr name="halfBaseOfLeg" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="circle_width" format="dimension" />
        <attr name="circle_height" format="dimension" />
        <attr name="circle_margin" format="dimension" />
        <attr name="circle_selected" format="reference" />
        <attr name="circle_unselected" format="reference" />
    </declare-styleable>
    <declare-styleable name="SwitchButton">
        <attr name="thumbDrawable" format="reference" />
        <attr name="thumbColor" format="color|reference" />
        <attr name="thumbMargin" format="dimension|reference" />
        <attr name="thumbMarginTop" format="dimension|reference" />
        <attr name="thumbMarginBottom" format="dimension|reference" />
        <attr name="thumbMarginLeft" format="dimension|reference" />
        <attr name="thumbMarginRight" format="dimension|reference" />
        <attr name="thumbWidth" format="dimension|reference" />
        <attr name="thumbHeight" format="dimension|reference" />
        <attr name="thumbRadius" format="dimension|reference" />
        <attr name="backRadius" format="dimension|reference" />
        <attr name="backDrawable" format="reference" />
        <attr name="backColor" format="color|reference" />
        <attr name="fadeBack" format="boolean" />
        <attr name="backMeasureRatio" format="float" />
        <attr name="animationDuration" format="integer" />
        <attr name="tintColor" format="color|reference" />
        <attr name="textOn" format="string" />
        <attr name="textOff" format="string" />
        <attr name="textMarginH" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RegisterAndGoBackTitle">
        <attr name="titleStyle">
            <enum name="commonGoBack" value="0" />
            <enum name="tvGoBack" value="1" />
            <enum name="loginRegisterGoBack" value="2" />
            <enum name="loginRegisterBackForward" value="3" />
            <enum name="commonGoBackAndForward" value="4" />
        </attr>
        <attr name="centerTitle" format="string" />
        <attr name="rightTitle" format="string" />
        <attr name="leftTitle" format="string" />
    </declare-styleable>
    <declare-styleable name="VerifyInputView">
        <attr name="centerSpacing" format="dimension" />
        <attr name="characterSpacing" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="verifyLength" format="integer" />
    </declare-styleable>
    <declare-styleable name="RefreshFrameLayout">
        <!-- Optional. If you putObject header and content in xml, you can you these to specify them. -->
        <attr name="header" format="reference" />
        <attr name="content" format="reference" />
        <!-- the resistance when you are moving the frame -->
        <attr name="resistance" format="float" />
        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="ratio_of_header_height_to_refresh" format="float" />
        <attr name="duration_to_close" format="integer" />
        <attr name="duration_to_close_header" format="integer" />
        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="pull_to_fresh" format="boolean" />
        <!-- keep header when refreshing-->
        <attr name="keep_header_when_refresh" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PullRefreshHeader">
        <attr name="pull_rotate_ani_time" format="integer" />
    </declare-styleable>
    <declare-styleable name="MaskView">
        <attr name="android:paddingLeft" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingBottom" />
    </declare-styleable>
    <declare-styleable name="BadgeViewUtil">
        <attr name="badge_padding_top" format="dimension" />
        <attr name="badge_padding_right" format="dimension" />
        <attr name="badge_count" format="integer" />
        <attr name="badge_none_show" format="boolean" />
        <attr name="badge_color" format="color" />
    </declare-styleable>
    <declare-styleable name="KeyboardEditText">
        <attr name="allowKeyboard" format="boolean" />
        <attr name="showDone" format="boolean" />
        <attr name="keyboardType">
            <enum name="custom" value="0" />
            <enum name="system" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StretchPanel">
        <attr name="contentView" format="reference" />
        <attr name="stretchView" format="reference" />
    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="cropBackgroundColor" format="color" />
        <attr name="cropBorderLineColor" format="color" />
        <attr name="cropBorderLineThickness" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TradeLockLayout">
        <attr name="showBack" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="max" format="integer" />
    </declare-styleable>

    <declare-styleable name="SnackBarLayout">
        <attr name="maxWidth" format="dimension"/>
        <attr name="elevation" format="dimension"/>
        <attr name="dimension" format="dimension"/>
        <attr name="maxActionInlineWidth" format="dimension"/>
    </declare-styleable>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:height="7dp"
        android:drawable="@drawable/shape_progressbar_bg"
        android:gravity="bottom"/>

    <item
        android:id="@android:id/progress"
        android:height="7dp"
        android:gravity="bottom">
        <scale
            android:drawable="@drawable/shape_progressbar_progress"
            android:scaleWidth="100%">
            <shape>
                <corners android:radius="12dp" />

                <gradient
                    android:endColor="@color/color_download_progress_end"
                    android:startColor="@color/color_download_progress_start" />

            </shape>
        </scale>
    </item>
</layer-list>
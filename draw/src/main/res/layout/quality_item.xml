<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_common_white">

    <com.yubin.draw.widget.viewGroup.exposure.ExposureLayout
        android:id="@+id/layout_exposure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/st_bg_common_master_blue"
            android:gravity="center"
            android:textColor="@color/st_text_master_common_white"
            android:textSize="16sp"
            tools:text="1" />
    </com.yubin.draw.widget.viewGroup.exposure.ExposureLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/snack_bar_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5.5dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="@string/title_msg"
                android:textColor="@color/st_text_common_stock_back"
                android:textSize="@dimen/common_font_size_24px"
                app:drawableLeftCompat="@drawable/alert_red_sm" />

            <TextView
                android:id="@+id/snack_bar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="@string/time"
                android:layout_alignBaseline="@+id/snack_bar_text_title"
                android:textColor="@color/st_text_common_stock_back"
                android:textSize="@dimen/common_font_size_24px" />

        </RelativeLayout>


        <TextView
            android:id="@+id/snackbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:textSize="@dimen/common_font_size_1080p_42px"
            tools:text="TextGoesHeresdfadfasdfasdfasdfasdfasdfsadfasdfasdfasdf"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>


</merge>
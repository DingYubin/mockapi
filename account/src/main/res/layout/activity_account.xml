<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/st_bg_common_normal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/st_text_master_common_white"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/user_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/st_bg_hint_top"
        android:text="@string/get_user_info"
        android:textColor="@color/st_text_master_common_white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ad_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/st_portfolio_switch_down_color"
        app:layout_constraintTop_toBottomOf="@+id/user_btn"
        android:layout_marginTop="24dp"
        android:padding="5dp"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>